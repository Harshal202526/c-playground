#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "enter number of football players: ";
    cin >> n;
string *players = new string[n];
cout << "Enter names of players:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> players[i];
    }
    
    

cout << "Your team players are:" << endl;
    for (int i = 0; i < n; i++) {
        cout << players[i] << endl;
    }

    cout << "The captain of the team is Messi!" << endl;
 delete[] players;

    cout << "Memory released successfully." << endl;

    return 0;
}
